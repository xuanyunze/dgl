<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:focusable="true" 
        android:focusableInTouchMode="true" 
        android:layout_width="0.0dip" 
        android:layout_height="0.0dip" />
    <RelativeLayout 
        android:id="@+id/singnature_rlyt" 
        
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        <ImageView 
            android:id="@+id/imageView1" 
            android:visibility="gone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_margin="0.0dip" 
            android:layout_alignParentRight="true" />
        <FrameLayout 
            android:id="@+id/input_signature_edtv" 
            android:background="#ffffffff" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:layout_weight="1.0" 
            android:layout_below="@id/imageView1" />
        <RelativeLayout 
            android:paddingBottom="0.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15.0dip" 
            android:layout_marginRight="15.0dip" 
            android:layout_alignParentBottom="true" 
            android:layout_centerHorizontal="true">
            
            <Button 
                android:id="@+id/clickmake_btn" 
        		android:layout_width="150dp" 
        		android:layout_height="40dp" 
                android:layout_marginLeft="10.0dip" 
                android:layout_alignParentRight="true" 
                android:text="确认支付"
        		android:textColor="#ff555555"
       	 		android:textSize="18sp"
        		android:background="@drawable/make_signature_ok"/>
            <Button 
                android:id="@+id/rewrite_btn" 
        		android:layout_width="150dp" 
        		android:layout_height="40dp" 
                android:layout_alignBaseline="@id/clickmake_btn" 
                android:layout_alignTop="@id/clickmake_btn" 
                android:layout_alignBottom="@id/clickmake_btn" 
                android:layout_alignParentLeft="true" 
                android:text="重新书写"
        		android:textSize="18sp"
        		android:textColor="#ff555555"
        		android:background="@drawable/make_signature_reset"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>