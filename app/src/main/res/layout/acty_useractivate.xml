<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
	<Button 
	    android:id="@+id/useractivate_btngo"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/btn_common_yellow"
	    android:textColor="#fff0f0f0"
	    android:textSize="20sp"
	    android:text="立即绑定"/>
	<ScrollView 
	   	android:layout_below="@id/top_header"
	    android:layout_above="@id/useractivate_btngo"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
		<LinearLayout 
	    	android:orientation="vertical"
	    	android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	    	>
			<LinearLayout 
				android:id="@+id/useractivate_bar_type"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/accmanage_bg"
				android:paddingTop="3dp"
				android:paddingLeft="10dp"
				android:paddingRight="20dp"
				android:gravity="center_vertical"
				>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:gravity="center_vertical"
					android:textSize="18sp"
					android:textColor="#ff999999"
					android:text="激活方式"
					android:layout_weight="2"
					/>
				<TextView 
					android:id="@+id/useractivate_tv_type"
					android:background="@null"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:textSize="20sp"
					android:textColor="#ffff6666"
					/>
				<ImageView 
					android:id="@+id/useractivate_ivbtn_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/accmanage_arrow_right"
					android:layout_weight="0.5"
					/>
			</LinearLayout>
			<LinearLayout 
				android:id="@+id/useractivate_bar_code"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/accmanage_bg"
				android:layout_marginTop="20dp"
				android:paddingLeft="10dp"
				android:paddingRight="20dp"
				android:gravity="center_vertical"
				android:visibility="gone"
				>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:gravity="center_vertical"
					android:textSize="20sp"
					android:textColor="#ff999999"
					android:text="激活码"
					android:layout_weight="2"
					/>
				<EditText 
					android:id="@+id/useractivate_tv_code"
					android:background="@null"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:textSize="18sp"
					android:textColor="#ffff6666"
					android:hint="请输入激活码"
					/>
			</LinearLayout>
			<LinearLayout 
				android:id="@+id/useractivate_bar_sn"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/accmanage_bg"
				android:layout_marginTop="20dp"
				android:paddingLeft="10dp"
				android:paddingRight="20dp"
				android:gravity="center_vertical"
				android:visibility="gone"
				>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:gravity="center_vertical"
					android:textSize="20sp"
					android:textColor="#ff999999"
					android:text="设备SN"
					android:layout_weight="2"
					/>
				<EditText 
					android:id="@+id/useractivate_tv_sn"
					android:background="@null"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:textSize="18sp"
					android:textColor="#ffff6666"
					android:hint="请输入设备SN"
					/>
			</LinearLayout>
			<LinearLayout 
				android:id="@+id/useractivate_bar_paypwd"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/accmanage_bg"
				android:layout_marginTop="20dp"
				android:paddingLeft="10dp"
				android:paddingRight="20dp"
				android:gravity="center_vertical"
				>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:gravity="center_vertical"
					android:textSize="18sp"
					android:textColor="#ff999999"
					android:text="支付密码"
					android:layout_weight="2"
					/>
				<EditText 
					android:id="@+id/useractivate_tv_paypwd"
					android:background="@null"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:textSize="18sp"
					android:textColor="#ffff6666"
					android:hint="请设置支付密码"
					android:inputType="textPassword"
					/>
			</LinearLayout>
			<LinearLayout 
				android:id="@+id/useractivate_bar_repaypwd"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@drawable/accmanage_bg"
				android:paddingLeft="10dp"
				android:paddingRight="20dp"
				android:gravity="center_vertical"
				>
				<TextView 
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginLeft="5dp"
					android:gravity="center_vertical"
					android:textSize="18sp"
					android:textColor="#ff999999"
					android:text="重复密码"
					android:layout_weight="2"
					/>
				<EditText 
					android:id="@+id/useractivate_tv_repaypwd"
					android:background="@null"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="6"
					android:textSize="18sp"
					android:textColor="#ffff6666"
					android:hint="重复输入支付密码"
					android:inputType="textPassword"
					/>
			</LinearLayout>
	    </LinearLayout>
	</ScrollView>
</RelativeLayout>
