<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
	
	<Button 
	    android:id="@+id/bind_othercard_btngo"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/btn_common_yellow"
	    android:textColor="#fff0f0f0"
	    android:textSize="20sp"
	    android:text="立即认证"
	    />
	<ScrollView 
	   	android:layout_below="@id/top_header"
	    android:layout_above="@id/bind_othercard_btngo"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">

	    <LinearLayout 
	    	android:orientation="vertical"
	    	android:layout_width="match_parent"
	   		android:layout_height="match_parent"
	    	>
		    <LinearLayout 
			    android:id="@+id/bind_othercard_bar_cardtype"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="10dp"
			  	android:paddingLeft="10dp"
			  	android:paddingRight="20dp"
			  	android:gravity="center_vertical"
			  	android:visibility="gone"
			    >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff999999"
			        android:text="选择卡片类型"
			        android:layout_weight="2"
			        />
			    <TextView 
			        android:id="@+id/bind_othercard_tv_cardtype"
			        android:background="@null"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="6"
			        android:textSize="20sp"
			        android:textColor="#ffff6666"
			        />
			    <ImageView 
			        android:id="@+id/bind_othercard_ivbtn_cardtype"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/accmanage_arrow_right"
			        android:layout_weight="0.5"
			        />
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/bind_othercard_bar_isfast"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			  	android:paddingRight="20dp"
			  	android:gravity="center_vertical"
			  	android:visibility="gone"
			    >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff999999"
			        android:text="开通快捷支付"
			        android:layout_weight="2"
			        />
			    <TextView 
			        android:id="@+id/bind_othercard_tv_isfast"
			        android:background="@null"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="6"
			        android:textSize="20sp"
			        android:textColor="#ffff6666"
			        android:text="开通"
			        />
			    <CheckBox 
			        android:id="@+id/bind_othercard_ivbtn_isfast"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:drawableLeft="@drawable/btn_switch_common"
			        android:button="@null"
			        android:checked="true"
			        android:layout_weight="0.5"
			        />
			</LinearLayout>
	    	<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="15dp"
	   			android:layout_height="45dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="账户名称："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_accname"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff666666"
	   	    		android:ems="10" 
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:layout_width="fill_parent"
	   			android:background="@drawable/accmanage_bg"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="50dp">
	   			<ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:src="@drawable/accmanage_icon_maincard"
			        />
	   			<TextView
	   			    android:id="@+id/bind_othercard_old"
	   	    		android:contentDescription=""
	   	    		android:layout_marginLeft="10dp"
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="您尚未绑定过信用卡"/>
	   	    </LinearLayout>
		    <LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="银行卡号："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_accno"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写信用卡号"
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp"
	   			android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="发卡银行："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_bankname"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写发卡行"
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="有  效  期："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_cardValidDate"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请输入四位有效数  例：0315"
	   	    		android:singleLine="true" />
			</LinearLayout><LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp"
	   			 android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="安  全  码："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_cardCvv"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请输入银行卡背面的三位安全码"
	   	    		android:singleLine="true" />
			</LinearLayout>
	    	<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp"
	   			android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="有效期："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_bankname"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写有效期"
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp"
	   			android:visibility="gone"
	   			>
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="安全码："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_bankdistr"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff666666"
	   	    		android:ems="10" 
	   	    		android:hint="请填写安全码"
	   	    		android:singleLine="true" />
			</LinearLayout>
	    	<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/login_inputbox"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginLeft="10dp"
	   			android:layout_marginRight="10dp"
	   			android:layout_marginTop="5dp"
	   			android:layout_height="45dp"
	   			android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="发卡支行："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_othercard_bankbranch"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="12.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff666666"
	   	    		android:ems="10" 
	   	    		android:singleLine="true" />
			</LinearLayout>
		    <LinearLayout
	   	  	    android:id="@+id/bind_maincard_mbar_pos1"
	   	    	android:orientation="vertical"
	   			android:background="#ccffffff"
	   			android:layout_width="match_parent"
	   			android:paddingLeft="20dp"
	   			android:layout_marginLeft="30dp"
	   			android:layout_marginRight="30dp"
	   			android:paddingRight="20dp"
	   			android:layout_marginTop="20dp"
	   			android:paddingBottom="10dp"
	   			android:layout_height="wrap_content"
	   			>
	   			<LinearLayout 
	   			    android:id="@+id/bind_maincard_bar_pos1"
	   			    android:orientation="horizontal"
	   			    android:layout_width="match_parent"
	   			    android:layout_gravity="center_vertical"
	   			    android:paddingTop="10dp"
	   			    android:layout_height="40dp">
	   			    <TextView 
	   			    	android:id="@+id/bind_maincard_tv_pos1"
	   			    	android:layout_width="wrap_content"
	   			    	android:layout_height="40dp"
	   			    	android:textColor="#ff97db4f"
	   			    	android:textSize="20sp"
	   			    	android:text="银行卡正面"
	   			    	android:layout_weight="8"
	   			    />
	   			    <TextView 
	   			        android:id="@+id/bind_maincard_camera_txt_pos1"
	   			        android:layout_width="wrap_content"
	   			        android:layout_height="wrap_content"
	   			        android:textSize="18sp"
	   			        android:textColor="#fffec200"
	   			        android:text="拍照"
	   			        android:gravity="center_vertical|right"
	   			        android:layout_weight="1"
	   			        />
	   			    <ImageView 
	   			        android:id="@+id/bind_maincard_camera_icon_pos1"
	   			        android:layout_width="wrap_content"
	   			        android:layout_height="wrap_content"
	   			        android:src="@drawable/realname_icon_camera"
	   			        android:layout_gravity="center_vertical|left"
	   			        android:layout_weight="1"
	   			        />
	   			</LinearLayout>
	   			<ImageView 
	   			    android:id="@+id/bind_maincard_img_pos1"
	   			    android:layout_width="match_parent"
	   			    android:layout_height="wrap_content"
	   			    android:layout_marginTop="0dp"
	   			    android:src="@drawable/realname_img_bg"
	   			    />
	   		</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
