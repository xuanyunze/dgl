<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>

	<RelativeLayout
        android:id="@+id/rel_deviceinfo"
        android:layout_below="@id/top_header"
        android:background="@drawable/reg_prot_bg" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        
         <ScrollView
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent">
	
			<RelativeLayout
		        android:layout_width="match_parent" 
		        android:layout_height="match_parent">
		        
			    <ImageView 
		        	android:id="@+id/deviceinfo_headicon"
		        	android:layout_width="wrap_content"
		        	android:layout_height="80dp"
		        	android:layout_marginTop="10dp"
		        	android:layout_marginBottom="5dp"
		        	android:src="@drawable/orderlist_icon_phonecharge"
		        />
			    <TextView 
			        android:id="@+id/deviceinfo_sn_label"
			        android:layout_below="@id/deviceinfo_headicon"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:gravity="center_vertical|left"
			        android:textSize="16sp"
			        android:textColor="#ff777777"
			        android:text="设备编号："
			        />
			    <TextView 
			        android:id="@+id/deviceinfo_sn_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_toRightOf="@id/deviceinfo_sn_label"
			        android:layout_alignTop="@id/deviceinfo_sn_label"
			        android:gravity="center_vertical|left"
			      	android:textSize="16sp"
			        android:textColor="#ff666666"
			        android:text="800000001100101"
			        />
				<View  
		   			android:layout_width="fill_parent"  
		   			android:layout_below="@id/deviceinfo_sn_label"
		    		android:layout_height="2dp"
		   			android:background="?android:attr/listDivider"
		   			android:layout_marginRight="20dp"/>
				
			  <TextView 
			        android:id="@+id/deviceinfo_type_label"
			        android:layout_below="@id/deviceinfo_sn_label"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:gravity="center_vertical|left"
			        android:textSize="16sp"
			        android:textColor="#ff777777"
			        android:text="设备类型："
			        />
			    <TextView 
			        android:id="@+id/deviceinfo_type_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_toRightOf="@id/deviceinfo_type_label"
			        android:layout_alignTop="@id/deviceinfo_type_label"
			        android:gravity="center_vertical|left"
			      	android:textSize="16sp"
			        android:textColor="#ff666666"
			        android:text="手机刷卡器"
			        />
			  <View  
		   			android:layout_width="fill_parent"  
		   			android:layout_below="@id/deviceinfo_type_label"
		    		android:layout_height="2dp" 
		   			android:background="?android:attr/listDivider"
		   			android:layout_marginRight="20dp"/>	
			   <TextView 
			        android:id="@+id/deviceinfo_stat_label"
			        android:layout_below="@id/deviceinfo_type_label"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:gravity="center_vertical|left"
			        android:textSize="16sp"
			        android:textColor="#ff777777"
			        android:text="设备状态："
			        />
			    <TextView 
			        android:id="@+id/deviceinfo_stat_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_toRightOf="@id/deviceinfo_stat_label"
			        android:layout_alignTop="@id/deviceinfo_stat_label"
			        android:gravity="center_vertical|left"
			      	android:textSize="16sp"
			        android:textColor="#ff666666"
			        android:text="正常"
			        />
				<View  
		   			android:layout_width="fill_parent"  
		   			android:layout_below="@id/deviceinfo_stat_label"
		    		android:layout_height="2dp" 
		   			android:background="?android:attr/listDivider"
		   			android:layout_marginRight="20dp"/>	
		   		<TextView 
			        android:id="@+id/deviceinfo_bindtime_label"
			        android:layout_below="@id/deviceinfo_stat_label"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:gravity="center_vertical|left"
			        android:textSize="16sp"
			        android:textColor="#ff777777"
			        android:text="绑定时间："
			        />
			    <TextView 
			        android:id="@+id/deviceinfo_bindtime_tv"
			        android:layout_width="wrap_content"
			        android:layout_height="40dp"
			        android:layout_toRightOf="@id/deviceinfo_bindtime_label"
			        android:layout_alignTop="@id/deviceinfo_bindtime_label"
			        android:gravity="center_vertical|left"
			      	android:textSize="16sp"
			        android:textColor="#ff666666"
			        android:text="2015-03-21 11:22:30"
			        />
				<View  
		   			android:layout_width="fill_parent"  
		   			android:layout_below="@id/deviceinfo_bindtime_label"
		    		android:layout_height="2dp" 
		   			android:background="?android:attr/listDivider"
		   			android:layout_marginRight="20dp"/>	

		    </RelativeLayout>
		</ScrollView>
 
     </RelativeLayout>
   	
</RelativeLayout>
