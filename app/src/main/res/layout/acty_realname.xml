<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
	<Button 
	    android:id="@+id/realname_btngo"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/btn_common_yellow"
	    android:textColor="#fff0f0f0"
	    android:textSize="20sp"
	    android:text="实名认证"
	    />
	<ScrollView 
	   	android:layout_below="@id/top_header"
	    android:layout_above="@id/realname_btngo"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    <LinearLayout
   	    	android:orientation="horizontal"
   			android:background="@drawable/login_inputbox"
   			android:layout_width="match_parent"
   			android:paddingLeft="10dp"
   			android:layout_marginLeft="30dp"
   			android:layout_marginRight="30dp"
   			android:layout_marginTop="20dp"
   			android:layout_height="45dp">
   		
   			<ImageView
   	    		android:contentDescription=""
   	    		android:background="@drawable/accmanage_icon_realname"
   	    		android:layout_width="wrap_content"
   	    		android:layout_gravity="center"
   	    		android:layout_height="wrap_content"/>
   		
   			<EditText android:textSize="18.0sp" 
   	    		android:id="@+id/realname_edtv_name"
   	    		android:background="#ffffffff"
   	    		android:paddingLeft="0.0dip" 
   	    		android:layout_width="fill_parent" 
   	    		android:layout_height="wrap_content" 
   	    		android:layout_marginLeft="10.0dip" 
   	    		android:layout_marginTop="10.0dip" 
   	    		android:layout_marginRight="10.0dip" 
   	    		android:hint="@string/hint_realname_name" 
   	    		android:ems="10" 
   	    		android:singleLine="true" 
   	    		/>
   	  	</LinearLayout>
   	  	<LinearLayout
   	    	android:orientation="horizontal"
   			android:background="@drawable/login_inputbox"
   			android:layout_width="match_parent"
   			android:paddingLeft="10dp"
   			android:layout_marginLeft="30dp"
   			android:layout_marginRight="30dp"
   			android:layout_marginTop="5dp"
   			android:layout_height="45dp">
   		
   			<ImageView
   	    		android:contentDescription=""
   	    		android:background="@drawable/realname_icon_idcard"
   	    		android:layout_width="wrap_content"
   	    		android:layout_gravity="center"
   	    		android:layout_height="wrap_content"/>
   		
   			<EditText android:textSize="18.0sp" 
   	    		android:id="@+id/realname_edtv_idno"
   	    		android:background="#ffffffff"
   	    		android:paddingLeft="0.0dip" 
   	    		android:layout_width="fill_parent" 
   	    		android:layout_height="wrap_content" 
   	    		android:layout_marginLeft="10.0dip" 
   	    		android:layout_marginTop="10.0dip" 
   	    		android:layout_marginRight="10.0dip" 
   	    		android:hint="@string/hint_realname_idno" 
   	    		android:ems="10" 
   	    		android:singleLine="true"
   	    		 
   	    		android:inputType="text" />
   	  	</LinearLayout>
   	  	<LinearLayout
   	  	    android:id="@+id/realname_mbar_pos"
   	    	android:orientation="vertical"
   			android:background="#ccffffff"
   			android:layout_width="match_parent"
   			android:paddingLeft="20dp"
   			android:layout_marginLeft="30dp"
   			android:layout_marginRight="30dp"
   			android:paddingRight="20dp"
   			android:layout_marginTop="20dp"
   			android:paddingBottom="10dp"
   			android:layout_height="wrap_content">
   			<LinearLayout 
   			    android:id="@+id/realname_bar_pos"
   			    android:orientation="horizontal"
   			    android:layout_width="match_parent"
   			    android:layout_gravity="center_vertical"
   			    android:paddingTop="10dp"
   			    android:layout_height="40dp">
   			    <TextView 
   			    	android:id="@+id/realname_tv_pos"
   			    	android:layout_width="wrap_content"
   			    	android:layout_height="40dp"
   			    	android:textColor="#ff97db4f"
   			    	android:textSize="20sp"
   			    	android:text="身份证正面"
   			    	android:layout_weight="8"
   			    />
   			    <TextView 
   			        android:id="@+id/realname_camera_txt_pos"
   			        android:layout_width="wrap_content"
   			        android:layout_height="wrap_content"
   			        android:textSize="18sp"
   			        android:textColor="#fffec200"
   			        android:text="拍照"
   			        android:gravity="center_vertical|right"
   			        android:layout_weight="1"
   			        />
   			    <ImageView 
   			        android:id="@+id/realname_camera_icon_pos"
   			        android:layout_width="wrap_content"
   			        android:layout_height="wrap_content"
   			        android:src="@drawable/realname_icon_camera"
   			        android:layout_gravity="center_vertical|left"
   			        android:layout_weight="1"
   			        />
   			</LinearLayout>
   			<ImageView 
   			    android:id="@+id/realname_img_pos"
   			    android:layout_width="match_parent"
   			    android:layout_height="wrap_content"
   			    android:layout_marginTop="0dp"
   			    android:src="@drawable/realname_img_bg1"
   			    />
   		</LinearLayout>
   		<LinearLayout
   	  	    android:id="@+id/realname_mbar_nage"
   	    	android:orientation="vertical"
   			android:background="#ccffffff"
   			android:layout_width="match_parent"
   			android:paddingLeft="20dp"
   			android:layout_marginLeft="30dp"
   			android:layout_marginRight="30dp"
   			android:paddingRight="20dp"
   			android:layout_marginTop="1dp"
   			android:paddingBottom="10dp"
   			android:layout_height="wrap_content">
   			<LinearLayout 
   			    android:id="@+id/realname_bar_nage"
   			    android:orientation="horizontal"
   			    android:layout_width="match_parent"
   			    android:layout_gravity="center_vertical"
   			    android:paddingTop="10dp"
   			    android:layout_height="40dp">
   			    <TextView 
   			    	android:id="@+id/realname_tv_nage"
   			    	android:layout_width="wrap_content"
   			    	android:layout_height="40dp"
   			    	android:textColor="#ffcccccc"
   			    	android:textSize="20sp"
   			    	android:text="身份证背面"
   			    	android:layout_weight="8"
   			    />
   			    <TextView 
   			        android:id="@+id/realname_camera_txt_nage"
   			        android:layout_width="wrap_content"
   			        android:layout_height="wrap_content"
   			        android:textSize="18sp"
   			        android:textColor="#fffec200"
   			        android:text="拍照"
   			        android:gravity="center_vertical|right"
   			        android:layout_weight="1"
   			        android:visibility="gone"
   			        />
   			    <ImageView 
   			        android:id="@+id/realname_camera_icon_nage"
   			        android:layout_width="wrap_content"
   			        android:layout_height="wrap_content"
   			        android:src="@drawable/realname_icon_camera"
   			        android:layout_gravity="center_vertical|left"
   			        android:layout_weight="1"
   			        android:visibility="gone"
   			        />
   			</LinearLayout>
   			<ImageView 
   			    android:id="@+id/realname_img_nage"
   			    android:visibility="gone"
   			    android:layout_width="match_parent"
   			    android:layout_height="wrap_content"
   			    android:layout_marginTop="0dp"
   			    android:src="@drawable/realname_img_bg2"
   			    />
   		</LinearLayout>
   		<LinearLayout
   	  	    android:id="@+id/realname_mbar_self"
   	    	android:orientation="vertical"
   			android:background="#ccffffff"
   			android:layout_width="match_parent"
   			android:paddingLeft="20dp"
   			android:layout_marginLeft="30dp"
   			android:layout_marginRight="30dp"
   			android:paddingRight="20dp"
   			android:layout_marginTop="1dp"
   			android:paddingBottom="10dp"
   			android:layout_height="wrap_content">
   			<LinearLayout 
   			    android:id="@+id/realname_bar_self"
   			    android:orientation="horizontal"
   			    android:layout_width="match_parent"
   			    android:layout_gravity="center_vertical"
   			    android:paddingTop="10dp"
   			    android:layout_height="40dp">
   			    <TextView 
   			    	android:id="@+id/realname_tv_self"
   			    	android:layout_width="wrap_content"
   			    	android:layout_height="40dp"
   			    	android:textColor="#ffcccccc"
   			    	android:textSize="20sp"
   			    	android:text="手持身份证"
   			    	android:layout_weight="8"
   			    />
   			    <TextView 
   			        android:id="@+id/realname_camera_txt_self"
   			        android:layout_width="wrap_content"
   			        android:layout_height="wrap_content"
   			        android:textSize="18sp"
   			        android:textColor="#fffec200"
   			        android:text="拍照"
   			        android:gravity="center_vertical|right"
   			        android:layout_weight="1"
   			        android:visibility="gone"
   			        />
   			    <ImageView 
   			        android:id="@+id/realname_camera_icon_self"
   			        android:layout_width="wrap_content"
   			        android:layout_height="wrap_content"
   			        android:src="@drawable/realname_icon_camera"
   			        android:layout_gravity="center_vertical|left"
   			        android:layout_weight="1"
   			        android:visibility="gone"
   			        />
   			</LinearLayout>
   			<ImageView 
   			    android:visibility="gone"
   			    android:id="@+id/realname_img_self"
   			    android:layout_width="match_parent"
   			    android:layout_height="wrap_content"
   			    android:layout_marginTop="0dp"
   			    android:src="@drawable/realname_img_bg3"
   			    />
   		</LinearLayout>
	</LinearLayout>
	</ScrollView>
</RelativeLayout>
