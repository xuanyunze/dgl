<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
	<LinearLayout 
		android:id="@+id/readcard_bar_type"
	 	android:layout_below="@id/top_header"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@drawable/accmanage_bg"
		android:paddingTop="3dp"
		android:paddingLeft="10dp"
		android:paddingRight="20dp"
		android:gravity="center_vertical"
		android:visibility="gone"
		>
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="5dp"
			android:gravity="center_vertical"
			android:textSize="18sp"
			android:textColor="#ff999999"
			android:text="设备类型"
			android:layout_weight="2"
			/>
		<TextView 
			android:id="@+id/readcard_tv_type"
			android:background="@null"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="6"
			android:textSize="20sp"
			android:textColor="#ffff6666"
			/>
		<ImageView 
			android:id="@+id/readcard_ivbtn_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/accmanage_arrow_right"
			android:layout_weight="0.5"
			/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/readcard_bar_btn"
	   	android:orientation="horizontal"
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:visibility="gone"
	    >
	    <Button 
	        android:id="@+id/readcard_btn_reconnect"
	        android:background="@drawable/btn_common_yellow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="重新连接"
	        android:textColor="#ff8e8e8e"
	        android:textSize="18sp"
	        android:layout_weight="1"
	        />
	    <Button 
	        android:id="@+id/readcard_btn_swipe"
	        android:background="@drawable/btn_common_yellow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="刷卡/插IC卡"
	        android:textColor="#ff8e8e8e"
	        android:textSize="18sp"
	        android:layout_weight="1"
	        android:layout_marginLeft="1dp"
	        />
	    <Button 
	        android:id="@+id/readcard_btn_emv"
	        android:background="@drawable/btn_common_yellow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="读芯片卡"
	        android:textColor="#ff8e8e8e"
	        android:textSize="18sp"
	        android:layout_weight="1"
	        android:layout_marginLeft="1dp"
	        android:visibility="gone"
	        />
	</LinearLayout>

	<include
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/top_header"
	    android:layout_centerHorizontal="true"
	    layout="@layout/readcard_device" />

</RelativeLayout>
