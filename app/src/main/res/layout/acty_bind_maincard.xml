<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
	
	<Button 
	    android:id="@+id/bind_maincard_btngo"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/btn_common_yellow"
	    android:textColor="#fff0f0f0"
	    android:textSize="20sp"
	    android:text="确认绑定"
	    />
	<ScrollView 
	   	android:layout_below="@id/top_header"
	    android:layout_above="@id/bind_maincard_btngo"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
		<LinearLayout 
	    	android:orientation="vertical"
	    	android:layout_width="match_parent"
	   		android:layout_height="match_parent"
	    	>
	    	<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp">
	   			<ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:src="@drawable/accmanage_icon_realname"
			        />
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:layout_marginLeft="10dp"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="账户名称："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_accname"
	   	    		android:background="@null"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:singleLine="true" />
			</LinearLayout>
	       <LinearLayout
	   	    	android:orientation="horizontal"
	   			android:layout_width="fill_parent"
	   			android:background="@drawable/accmanage_bg"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="50dp">
	   			<ImageView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:src="@drawable/accmanage_icon_maincard"
			        />
	   			<TextView
	   			    android:id="@+id/bind_maincard_old"
	   	    		android:contentDescription=""
	   	    		android:layout_marginLeft="10dp"
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="您尚未绑定过银行卡"/>
	   	    </LinearLayout>
	        <LinearLayout
	   	    	android:orientation="horizontal"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp">
	   			<TextView
	   			    android:id="@+id/bind_maincard_xinfo"
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:gravity="center"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="请填写以下内容绑定银行卡"/>
	   	    </LinearLayout>
	   	    <LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="开户银行："/>
	   		
	   			<TextView 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_bankname"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请选择开户银行"
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="开户地区："/>
	   		
	   			<TextView 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_area"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请选择开户行地区"
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="开户支行："/>
	   		
	   			<TextView 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_bankbranch"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请选择开户支行"
	   	    		android:singleLine="true" />
			</LinearLayout>
		    <LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="借记卡号："/>
	   		
	   			<EditText
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_accno"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent"
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写借记卡号"
	   	    		android:singleLine="true" />
			</LinearLayout>

			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp"
	   			android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="开户分行："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_bankdistr"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写开户分行，没有可不填"
	   	    		android:singleLine="true" />
			</LinearLayout>			
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp"
	   			android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="所属省份："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_province"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写开户行省份"
	   	    		android:singleLine="true" />
			</LinearLayout>
			<LinearLayout
	   	    	android:orientation="horizontal"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp"
	   			android:visibility="gone">
	   		
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="所属城市："/>
	   		
	   			<EditText 
	   		    	android:textSize="16.0sp" 
	   	    		android:id="@+id/bind_maincard_city"
	   	    		android:background="#ffffffff"
	   	    		android:paddingLeft="0.0dip" 
	   	    		android:layout_width="fill_parent" 
	   	    		android:layout_height="wrap_content" 
	   	    		android:layout_marginTop="9.0dip" 
	   	    		android:layout_marginRight="10.0dip" 
	   	    		android:textColor="#ff888888"
	   	    		android:ems="10" 
	   	    		android:hint="请填写开户行城市"
	   	    		android:singleLine="true" />
			</LinearLayout>
			
	   		
	   		<RadioGroup
	   			android:orientation="horizontal"
	   			android:id="@+id/bind_maincard_acccate"
	   			android:background="@drawable/accmanage_bg"
	   			android:layout_width="fill_parent"
	   			android:paddingLeft="10dp"
	   			android:layout_marginTop="2dp"
	   			android:layout_height="40dp"
	   			android:visibility="gone">
	   			<TextView
	   	    		android:contentDescription=""
	   	    		android:layout_width="wrap_content"
	   	    		android:layout_gravity="center"
	   	    		android:layout_height="wrap_content"
	   	    		android:textSize="16sp"
	   	    		android:textColor="#ff888888"
	   	    		android:text="账户类型："/>

	   				<RadioButton
	   			    android:id="@+id/bind_maincard_gong"
	   			    android:layout_width="0dp"
	   			    android:layout_height="wrap_content"
	   			    android:textColor="#ff888888"
	   			    android:layout_weight="1"
	   			    android:text="对公" />
	   				<RadioButton
	   			    android:id="@+id/bind_maincard_si"
	   			    android:layout_width="0dp"
	   			    android:layout_height="wrap_content"
	   			    android:textColor="#ff888888"
	   			    android:layout_weight="1"
	   			    android:checked="true"
	   			    android:text="对私" />
	   			    
	   			</RadioGroup>
			
			<LinearLayout
	   	  	    android:id="@+id/bind_maincard_mbar_pos"
	   	    	android:orientation="vertical"
	   			android:background="#ccffffff"
	   			android:layout_width="match_parent"
	   			android:paddingLeft="20dp"
	   			android:layout_marginLeft="30dp"
	   			android:layout_marginRight="30dp"
	   			android:paddingRight="20dp"
	   			android:layout_marginTop="20dp"
	   			android:paddingBottom="10dp"
	   			android:layout_height="wrap_content">
	   			<LinearLayout 
	   			    android:id="@+id/bind_maincard_bar_pos"
	   			    android:orientation="horizontal"
	   			    android:layout_width="match_parent"
	   			    android:layout_gravity="center_vertical"
	   			    android:paddingTop="10dp"
	   			    android:layout_height="40dp">
	   			    <TextView 
	   			    	android:id="@+id/bind_maincard_tv_pos"
	   			    	android:layout_width="wrap_content"
	   			    	android:layout_height="40dp"
	   			    	android:textColor="#ff97db4f"
	   			    	android:textSize="20sp"
	   			    	android:text="银行卡正面"
	   			    	android:layout_weight="8"
	   			    />
	   			    <TextView 
	   			        android:id="@+id/bind_maincard_camera_txt_pos"
	   			        android:layout_width="wrap_content"
	   			        android:layout_height="wrap_content"
	   			        android:textSize="18sp"
	   			        android:textColor="#fffec200"
	   			        android:text="拍照"
	   			        android:gravity="center_vertical|right"
	   			        android:layout_weight="1"
	   			        />
	   			    <ImageView 
	   			        android:id="@+id/bind_maincard_camera_icon_pos"
	   			        android:layout_width="wrap_content"
	   			        android:layout_height="wrap_content"
	   			        android:src="@drawable/realname_icon_camera"
	   			        android:layout_gravity="center_vertical|left"
	   			        android:layout_weight="1"
	   			        />
	   			</LinearLayout>
	   			<ImageView 
	   			    android:id="@+id/bind_maincard_img_pos"
	   			    android:layout_width="match_parent"
	   			    android:layout_height="wrap_content"
	   			    android:layout_marginTop="0dp"
	   			    android:src="@drawable/realname_img_bg"
	   			    />
	   		</LinearLayout>
	   		<LinearLayout
	   	  	    android:id="@+id/bind_maincard_mbar_nage"
	   	    	android:orientation="vertical"
	   			android:background="#ccffffff"
	   			android:layout_width="match_parent"
	   			android:paddingLeft="20dp"
	   			android:layout_marginLeft="30dp"
	   			android:layout_marginRight="30dp"
	   			android:paddingRight="20dp"
	   			android:layout_marginTop="1dp"
	   			android:paddingBottom="10dp"
	   			android:layout_height="wrap_content">
	   			<LinearLayout 
	   			    android:id="@+id/bind_maincard_bar_nage"
	   			    android:orientation="horizontal"
	   			    android:layout_width="match_parent"
	   			    android:layout_gravity="center_vertical"
	   			    android:paddingTop="10dp"
	   			    android:layout_height="40dp">
	   			    <TextView 
	   			    	android:id="@+id/bind_maincard_tv_nage"
	   			    	android:layout_width="wrap_content"
	   			    	android:layout_height="40dp"
	   			    	android:textColor="#ffcccccc"
	   			    	android:textSize="20sp"
	   			    	android:text="银行卡背面"
	   			    	android:layout_weight="8"
	   			    />
	   			    <TextView 
	   			        android:id="@+id/bind_maincard_camera_txt_nage"
	   			        android:layout_width="wrap_content"
	   			        android:layout_height="wrap_content"
	   			        android:textSize="18sp"
	   			        android:textColor="#fffec200"
	   			        android:text="拍照"
	   			        android:gravity="center_vertical|right"
	   			        android:layout_weight="1"
	   			        android:visibility="gone"
	   			        />
	   			    <ImageView 
	   			        android:id="@+id/bind_maincard_camera_icon_nage"
	   			        android:layout_width="wrap_content"
	   			        android:layout_height="wrap_content"
	   			        android:src="@drawable/realname_icon_camera"
	   			        android:layout_gravity="center_vertical|left"
	   			        android:layout_weight="1"
	   			        android:visibility="gone"
	   			        />
	   			</LinearLayout>
	   			<ImageView 
	   			    android:id="@+id/bind_maincard_img_nage"
	   			    android:visibility="gone"
	   			    android:layout_width="match_parent"
	   			    android:layout_height="wrap_content"
	   			    android:layout_marginTop="0dp"
	   			    android:src="@drawable/realname_img_bg"
	   			    />
	   		</LinearLayout>
	    </LinearLayout>
   	</ScrollView>
</RelativeLayout>
