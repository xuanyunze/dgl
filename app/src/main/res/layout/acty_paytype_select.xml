<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
   	<ScrollView 
   	   	android:layout_below="@id/top_header"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    >
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/top_header"
	    >
		<LinearLayout 
		    android:id="@+id/paytype_bar_value"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/accmanage_bg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:layout_marginTop="15dp"
		    android:gravity="center_vertical|center"
		  	android:paddingLeft="10dp"
		  	android:paddingRight="20dp"
		    >
		  	<TextView
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:textColor="#ffaa6666"
		  	    android:textSize="20sp"
		  	    android:text="支付金额："
		    />
		  	<TextView 
		  	    android:id="@+id/paytype_tv_value"
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:textColor="#ffaa6666"
		  	    android:textSize="22sp"
		  	    android:text="2108.00"
		  	    />
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/paytype_bar_account"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/accmanage_bg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:layout_marginTop="10dp"
		    android:gravity="center_vertical|left"
		  	android:paddingLeft="10dp"
		  	android:visibility="gone">
		  	
		    <CheckBox 
		        android:id="@+id/paytype_btnradio_account"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:button="@null"
		        android:drawableLeft="@drawable/btn_radio_common"
		        android:drawablePadding="10dp"
		        android:layout_marginLeft="5dp"
		        android:gravity="center_vertical"
		        android:textSize="18sp"
		        android:textColor="#ff666666"
		        android:text="账户余额支付"
		        android:background="@null"
		        />
		</LinearLayout>
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    >
			<LinearLayout 
			    android:id="@+id/paytype_bar_fast"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			  	android:visibility="gone"
			    >
			    <CheckBox 
			        android:id="@+id/paytype_btnradio_fast"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:button="@null"
			        android:drawableLeft="@drawable/btn_radio_common"
			        android:drawablePadding="10dp"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff666666"
			        android:text="快捷支付"
			        android:background="@null"
			        />
			    
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/paytype_barinfo_fast"
			    android:orientation="vertical"
			    android:visibility="gone"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="3dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="10dp"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
			    android:background="@drawable/accmanage_info_bg"
			    >
    		<ListView 
        		android:id="@+id/paytype_listview_fast"
        		android:layout_width="match_parent" 
        		android:layout_height="wrap_content"
        		android:dividerHeight="1dp"
       			android:divider="#33000000"
        		android:scrollbars="@null"
        		android:choiceMode="singleChoice"
        		android:cacheColorHint="#00000000"
      			/>
			<TextView
				android:id="@+id/paytype_addnew_fast" 
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:layout_gravity="center"
				android:textColor="#ffaaaaaa"
				android:gravity="center_vertical|center"
				android:background="@drawable/btn_common_text"
				android:text="添加新卡"
			/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/paytype_bar_device"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/accmanage_bg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:layout_marginTop="1dp"
		  	android:paddingLeft="10dp"
		  	android:visibility="gone"
		    >
		    <CheckBox 
		        android:id="@+id/paytype_btnradio_device"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:button="@null"
		        android:drawableLeft="@drawable/btn_radio_common"
		        android:drawablePadding="10dp"
		        android:layout_marginLeft="5dp"
		        android:gravity="center_vertical"
		        android:textSize="18sp"
		        android:textColor="#ff666666"
		        android:text="刷卡支付"
		        android:background="@null"
		        />
		</LinearLayout>
	   
		<Button 
			android:id="@+id/paytype_btnnext"
   	      	android:textSize="20sp"
   	      	android:background="@drawable/btn_common_yellow"
   	      	android:layout_width="fill_parent"
   	      	android:layout_height="50dp"
   	      	android:layout_marginLeft="30dp"
   	      	android:layout_marginRight="30dp"
   	      	android:layout_marginTop="20dp"
   	      	android:textColor="@color/white"
   	      	android:text="@string/btn_next_text"/>
   	 	  	    
	</LinearLayout>
	</ScrollView>
</RelativeLayout>
