<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

	<include layout="@layout/sec_header_withdouble" android:id="@+id/top_header"/>
   	<ScrollView 
   	   	android:layout_below="@id/top_header"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    >
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="60dp"
		    android:background="@drawable/accmanage_bg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:layout_marginTop="15dp"
		    android:gravity="center_vertical|left"
		  	android:paddingLeft="30dp"
		  	android:paddingRight="20dp"
		    >
		  	<TextView
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:textColor="#ffaa6666"
		  	    android:textSize="22sp"
		  	    android:text="选择账户"
		    />
		</LinearLayout>
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    >
			<LinearLayout 
			    android:id="@+id/takemoney_select_bar_reacc"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			    >
			    <CheckBox 
			        android:id="@+id/takemoney_select_chx_reacc"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:button="@null"
			        android:drawableLeft="@drawable/btn_radio_common"
			        android:drawablePadding="10dp"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff666666"
			        android:text="收款账户余额(102898.56)"
			        android:background="@null"
			        />
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/takemoney_select_infobar_reacc"
			    android:orientation="vertical"
			    android:visibility="gone"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="3dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="10dp"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
			    android:background="@drawable/accmanage_info_bg"
			    >
			<TextView
				android:id="@+id/takemoney_select_infotv_reacc" 
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:layout_gravity="center"
				android:textColor="#ffaaaaaa"
				android:gravity="center_vertical|center"
				android:background="@drawable/btn_common_text"
				android:text="T+1方式到账，手续费0.3%;"
			/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    >
			<LinearLayout 
			    android:id="@+id/takemoney_select_bar_fracc"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			    >
			    <CheckBox 
			        android:id="@+id/takemoney_select_chx_fracc"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:button="@null"
			        android:drawableLeft="@drawable/btn_radio_common"
			        android:drawablePadding="10dp"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff666666"
			        android:text="收款账户冻结(6000.89)"
			        android:background="@null"
			        />
			    
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/takemoney_select_infobar_fracc"
			    android:orientation="vertical"
			    android:visibility="gone"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="3dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="10dp"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
			    android:background="@drawable/accmanage_info_bg"
			    >
			<TextView
				android:id="@+id/takemoney_select_infotv_fracc" 
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:layout_gravity="center"
				android:textColor="#ffaaaaaa"
				android:gravity="center_vertical|center"
				android:background="@drawable/btn_common_text"
				android:text="T+1方式到账，手续费0.3%;"
			/>
			</LinearLayout>
		</LinearLayout>
	   	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    >
			<LinearLayout 
			    android:id="@+id/takemoney_select_bar_chacc"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			    >
			    <CheckBox 
			        android:id="@+id/takemoney_select_chx_chacc"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:button="@null"
			        android:drawableLeft="@drawable/btn_radio_common"
			        android:drawablePadding="10dp"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff666666"
			        android:text="充值账户余额(0.00)"
			        android:background="@null"
			        />
			    
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/takemoney_select_infobar_chacc"
			    android:orientation="vertical"
			    android:visibility="gone"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="3dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="10dp"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
			    android:background="@drawable/accmanage_info_bg"
			    >
			<TextView
				android:id="@+id/takemoney_select_infotv_chacc"
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:layout_gravity="center"
				android:textColor="#ffaaaaaa"
				android:gravity="center_vertical|center"
				android:background="@drawable/btn_common_text"
				android:text="T+1方式到账，手续费0.3%;"
			/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="60dp"
		    android:background="@drawable/accmanage_bg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:layout_marginTop="15dp"
		    android:gravity="center_vertical|left"
		  	android:paddingLeft="30dp"
		  	android:paddingRight="20dp"
		    >
		  	<TextView
		  	    android:layout_width="wrap_content"
		  	    android:layout_height="wrap_content"
		  	    android:textColor="#ffaa6666"
		  	    android:textSize="22sp"
		  	    android:text="到账方式"
		    />
		</LinearLayout>
	   	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    >
			<LinearLayout 
			    android:id="@+id/takemoney_select_bar_t0"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			    >
			    <CheckBox 
			        android:id="@+id/takemoney_select_chx_t0"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:button="@null"
			        android:drawableLeft="@drawable/btn_radio_common"
			        android:drawablePadding="10dp"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff666666"
			        android:text="当日到账T+0(每日15点前申请)"
			        android:background="@null"
			        />
			    
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/takemoney_select_infobar_t0"
			    android:orientation="vertical"
			    android:visibility="gone"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="3dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="10dp"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
			    android:background="@drawable/accmanage_info_bg"
			    >
			<TextView
				android:id="@+id/takemoney_select_infotv_t0"
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:layout_gravity="center"
				android:textColor="#ffaaaaaa"
				android:gravity="center_vertical|center"
				android:background="@drawable/btn_common_text"
				android:text="T+0方式到账，手续费0.3%;"
			/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    >
			<LinearLayout 
			    android:id="@+id/takemoney_select_bar_t1"
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:background="@drawable/accmanage_bg"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:layout_marginTop="1dp"
			  	android:paddingLeft="10dp"
			    >
			    <CheckBox 
			        android:id="@+id/takemoney_select_chx_t1"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:button="@null"
			        android:drawableLeft="@drawable/btn_radio_common"
			        android:drawablePadding="10dp"
			        android:layout_marginLeft="5dp"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="#ff666666"
			        android:text="次日到账"
			        android:background="@null"
			        />			    
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/takemoney_select_infobar_t1"
			    android:orientation="vertical"
			    android:visibility="gone"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="3dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="10dp"
			    android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
			    android:background="@drawable/accmanage_info_bg"
			    >
			<TextView
				android:id="@+id/takemoney_select_infotv_t1"
				android:layout_width="80dp"
				android:layout_height="30dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="3dp"
				android:layout_gravity="center"
				android:textColor="#ffaaaaaa"
				android:gravity="center_vertical|center"
				android:background="@drawable/btn_common_text"
				android:text="T+1方式到账，手续费0.3%;"
			/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
	   	    android:orientation="horizontal"
	   		android:background="@drawable/login_inputbox"
	   		android:layout_width="fill_parent"
	   		android:paddingLeft="10dp"
	   		android:layout_marginLeft="30dp"
	   		android:layout_marginRight="30dp"
	   		android:layout_marginTop="10dp"
	   		android:layout_height="wrap_content">
	   		
	   		<ImageView
	   	    	android:contentDescription=""
	   	    	android:background="@drawable/home_app_receivemoney"
	   	    	android:layout_width="wrap_content"
	   	    	android:layout_gravity="center"
	   	    	android:layout_height="wrap_content"/>
	   		
	   		<EditText android:textSize="18.0sp" 
	   	    	android:id="@+id/takemoney_select_tv_value"
	   	    	android:background="#ffffffff"
	   	    	android:paddingLeft="0.0dip" 
	   	    	android:layout_width="fill_parent" 
	   	    	android:layout_height="wrap_content" 
	   	    	android:layout_marginLeft="10.0dip" 
	   	    	android:layout_marginTop="15.0dip" 
	   	    	android:layout_marginRight="10.0dip" 
	   	    	android:hint="@string/hint_moneyinput_money" 
	   	    	android:ems="10" 
	   	    	android:singleLine="true" 
	   	    	android:inputType="phone" />
   	  </LinearLayout>
   	  
		<Button 
			android:id="@+id/takemoney_select_btnnext"
   	      	android:textSize="20sp"
   	      	android:background="@drawable/btn_common_yellow"
   	      	android:layout_width="fill_parent"
   	      	android:layout_height="50dp"
   	      	android:layout_marginLeft="30dp"
   	      	android:layout_marginRight="30dp"
   	      	android:layout_marginTop="20dp"
   	      	android:textColor="@color/white"
   	      	android:text="@string/btn_next_text"/>
   	 	  	    
	</LinearLayout>
	</ScrollView>
</RelativeLayout>
